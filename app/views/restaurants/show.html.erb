<%= render 'shared/navbar' %>
<div class="container m-3">
  <h2><%= @restaurant.name %></h2>

  <%= @restaurant.category %>
  <br>
  <%= @restaurant.address %>

  <h3>Reviews</h3>
  <% if @restaurant.reviews.any? %>
    <ul><% @restaurant.reviews.each do |review| %>
      <li><%= review.rating %>
        <br>
        <%= review.content %>
      </li>
    <% end %></ul>
  <% else %>
    <%= link_to "Let's review", new_review_path(@restaurant) %>
  <% end %>
</div>
