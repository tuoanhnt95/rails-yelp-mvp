<%= render 'shared/navbar' %>
<div class="container m-3">
  <h2><%= @restaurant.name %></h2>

  <%= @restaurant.category %>
  <br>
  <%= @restaurant.address %>

  <br>
  <h3>Reviews</h3>
  <% if @restaurant.reviews.any? %>
    <ul><% @restaurant.reviews.each do |review| %>
      <li><%= review.rating %>
        <br>
        <%= review.content %>
      </li>
    <% end %></ul>
  <% else %>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :rating %>
      <%= f.input :content %>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  <% end %>
</div>
